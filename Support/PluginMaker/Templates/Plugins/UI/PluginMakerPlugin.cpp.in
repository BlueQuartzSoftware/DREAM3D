#include "@PluginName@Plugin.h"
#include "@PluginName@Widget.h"
#include "QtSupport/AIMPluginFrame.h"
#include "QtSupport/HelpDialog.h"

Q_EXPORT_PLUGIN2(@PluginName@Plugin, @PluginName@Plugin);

// -----------------------------------------------------------------------------
//
// -----------------------------------------------------------------------------
@PluginName@Plugin::@PluginName@Plugin() :
m_InputWidget(NULL)
{
  m_InputWidget = new @PluginName@Widget(NULL);
}

// -----------------------------------------------------------------------------
//
// -----------------------------------------------------------------------------
@PluginName@Plugin::~@PluginName@Plugin()
{

}

// -----------------------------------------------------------------------------
//
// -----------------------------------------------------------------------------
QString @PluginName@Plugin::getPluginName()
{
  return QString::fromStdString(DREAM3D::UIPlugins::@PluginName@DisplayName);
}

// -----------------------------------------------------------------------------
//
// -----------------------------------------------------------------------------
QWidget* @PluginName@Plugin::getInputWidget(QWidget* parent)
{
  m_InputWidget->setParent(parent);
  return m_InputWidget;
}

// -----------------------------------------------------------------------------
//
// -----------------------------------------------------------------------------
AIMPluginFrame* @PluginName@Plugin::getPluginFrame(QWidget* parent)
{
  AIMPluginFrame* frame = qobject_cast<AIMPluginFrame*>(m_InputWidget);
  return frame;
}

// -----------------------------------------------------------------------------
//
// -----------------------------------------------------------------------------
void @PluginName@Plugin::writeSettings(QSettings &prefs)
{
  m_InputWidget->writeSettings(prefs);
}

// -----------------------------------------------------------------------------
//
// -----------------------------------------------------------------------------
void @PluginName@Plugin::readSettings(QSettings &prefs)
{
  m_InputWidget->readSettings(prefs);
}

// -----------------------------------------------------------------------------
//
// -----------------------------------------------------------------------------
QIcon @PluginName@Plugin::icon()
{
  return QIcon(":/@PluginName@.png");
}

// -----------------------------------------------------------------------------
//
// -----------------------------------------------------------------------------
void @PluginName@Plugin::displayHelp()
{
  emit showHelp(htmlHelpIndexFile());
}

// -----------------------------------------------------------------------------
//
// -----------------------------------------------------------------------------
QUrl @PluginName@Plugin::htmlHelpIndexFile()
{
  QString s = QString::fromStdString(DREAM3D::UIPlugins::@PluginName@BaseName);
  s.append(QString("/index.html"));
  return QUrl(s);
}
