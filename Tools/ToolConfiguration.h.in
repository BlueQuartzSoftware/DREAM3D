#ifndef _ToolConfiguration_H_
#define _ToolConfiguration_H_


#include <QtCore/QString>

namespace D3DTools
{

  QString GetDREAM3DProjDir()
  {
    return QString::fromLatin1("@DREAM3DProj_SOURCE_DIR_NORM@");
  }

  QString GetDREAM3DSourceDir()
  {
    return QString::fromLatin1("@DREAM3DProj_SOURCE_DIR_NORM@/Source");
  }

  QString GetSIMPLibDir()
  {
    return QString::fromLatin1("@SIMPLib_SOURCE_DIR_NORM@");
  }

  QString GetSIMPLibPluginDir()
  {
    return QString::fromLatin1("@SIMPLib_PLUGIN_DIR_NORM@");
  }

  QString GetDREAM3DProjParentDir()
  {
    return QString::fromLatin1("@DREAM3DProj_PARENT_DIR_NORM@");
  }


}

#endif
