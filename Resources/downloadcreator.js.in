
var downloadcreator={
    curVersion: '@DREAM3D_VERSION@',

dotask:function(target, functionref, tasktype){ //assign a function to execute to an event handler (ie: onunload)                                                   
var tasktype=(window.addEventListener)? tasktype : "on"+tasktype
if (target.addEventListener)
target.addEventListener(tasktype, functionref, false)
else if (target.attachEvent)
target.attachEvent(tasktype, functionref)
},

    makelink:function(os, theTitle){
        ul = document.getElementById('download_ul');
        li = document.createElement('li');
        a = document.createElement('a');
        a.textContent = theTitle;
        a.href = '/binaries/' + downloadcreator.curVersion + '-' + os + '.zip';
        a.setAttribute('title', downloadcreator.curVersion + '-' + os);
        li.appendChild(a);
        ul.appendChild(li);
    },


init:function(){ //Initialize downloadcreator  script                                                                                                               
        //    div = document.getElementById('downloads');                                                                                                           
    //    ul = document.createElement('ul');                                                                                                                        
    //   ul.setAttribute('class', 'disc');                                                                                                                          
    //  ul.setAttribute('id', 'download_ul');                                                                                                                       
    downloadcreator.makelink("OSX", "OS X Universal Binary");
    downloadcreator.makelink("Win64", "Windows XP/Vista/7 64 Bit Zip Archive");
    downloadcreator.makelink("Win32", "Windows XP/Vista/7 32 Bit Zip Archive");

    //    div.appendChild(ul);                                                                                                                                      

} //END init() function                                                                                                                                             

}
downloadcreator.dotask(window, function(){downloadcreator.init()}, "load") //Initialize script on page load                                                         




